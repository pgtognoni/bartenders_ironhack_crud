<div class="recipe-card box-container">
  <div class="card-head">
    <h3 class="my-0 font-weight-normal" id="cocktail-name"> <%= cocktail.name %></h3>
  </div>
  <% if (!cocktail.id) { %>
  <div class="card-body">
    <div class="cocktail-img-container">  
      <img src="https://images.unsplash.com/photo-1514362545857-3bc16c4c7d1b?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80" alt="image" width="150" class="img-thumbnail">        
    </div>  
    <div class="card-text card-Api">
        <div class="ingredients">
        <h4>Ingredients:</h4>
          <ul class="list-unstyled mt-3 mb-4">
            <% cocktail.ingredients.forEach(ingredient => { %>
            <li><%- ingredient%></li><% }) %>
          </ul>
        </div>
        <div class="instruction">
          <h4>Instructions:</h4>
          <p><%= cocktail.instructions %></p>
        </div>
    </div>
  </div>
  <div class="card-footer">
    <div class="btn-container">
      <% if (page === 'profile') { %>
      <form action="/cocktail/remove/<%- cocktail.name %>" method="get">
        <button type="submit" class="edit-btn btn-delete">Remove</button>
      </form>
      <% } else { %>
      <a href="/cocktail/<%- cocktail.name %>/save" class="edit-btn">Save the recipe</a> 
      <% } %>
    </div>
  </div>
  <% } else if (cocktail.id){ %>
  <div class="card-body">
    <div class="cocktail-img-container">
      <img class= 'cocktail-img' alt="image" width="100" class="img-thumbnail"  src="<%=cocktail.image %>">
    </div>
    <div class="card-text">
      <div class="card-upper-body" >
        <div class="ingredients">
          <h4>Ingredients:</h4>
          <ul class="list-unstyled mt-3 mb-4">
            <% if (typeof cocktail.ingredients == 'Object' && cocktail.ingredients.length > 0) { cocktail.ingredients.forEach(ingredient => { %>
            <li><%- ingredient%></li><% })} else { %>
            <li><%- cocktail.ingredients %></li><% } %>
          </ul>
        </div>
        <div class="instructions">
          <h4 >Description:</h4>    
          <p class="description"><%= cocktail.description %></p> 
        </div>          
      </div>
      <div class="card-lower-body">
        <div>
          <h4>Method:</h4>
          <p><%= cocktail.method %></p>
        </div>
        <div class="garnish-container">
          <div>
            <h4>Garnish:</h4>
            <p><%= cocktail.garnish %></p>
          </div>        
          <div>
            <h4>Serving Glass:</h4>
            <p><%= cocktail.servingGlass %></p>
          </div>              
        </div>            
      </div>
    </div>        
  </div>
  <div class="card-footer">
    <div class="btn-container">
      <a href="/cocktail/<%- cocktail._id %>/modify" class="edit-btn">Modify</a>
      <a href="/cocktail/<%- cocktail._id %>/delete" class="edit-btn btn-delete">Delete</a>              
    </div>
  </div>
  <% } %>
</div>

 
             
           

           